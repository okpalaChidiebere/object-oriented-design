#include "Calendar.h"

Date::Date()
{
  day=01;
  month=01;
  year=1900;
}

Date::Date(int m,int d,int y)
{
  month=m;
  day=d;
   year=y;
}
string Date::toString()
{  
 string stringDay;
  string stringMonth;
  string stringDate;
  string dayList[31]={" 1st"," 2nd"," 3rd"," 4th"," 5th"," 6th"," 7th"," 8th"," 9th"," 10th"," 11th"," 12th"," 13th"," 14th"," 15th"," 16th"," 17th"," 18th"," 19th"," 20th"," 21st"," 22nd"," 23rd"," 24th"," 25th"," 26th"," 27th"," 28th"," 29th"," 30th"," 31th"};
  string monthList[12]={"January","February" ,"March","April","May","June","July","August","September","October","November","December"};

  for(int j=0;j<12;j++)
    {
      if(month-1==j)
	{
	stringMonth=monthList[j];
	}
    }

 for(int i=0;i<31;i++)
   {
     if(day-1==i)
       {
       stringDay=dayList[i];
       }
   }
stringDate=stringMonth+stringDay;
 return stringDate;
 
}
void Date::nextDate()
{ 
 if(day==31&&month==12)
    {
      day=1;
      month=month+1;
      year=year+1;
    }
 else if(day==31)
    {
    day=1; 
    month=month+1;
    }
  else if(day==28)
    {
    if((year%4==0&&year%100!=0)||year%400==0||year%2==0)
      {
    day=1;
    month=month+1;
      }
    }
  else
    {
    day=day+1;
    }
}


  //getters
int Date::getYear() const
{
  return year;
}

