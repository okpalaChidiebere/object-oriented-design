#include<iostream>
using namespace std;
class Date
{
 private:
  int month;
  int day;
  int year;

 public:
  //constructors
  Date();
  Date(int,int,int);
  operator++()
    friend ostream operator <<(const ostream&, const date&);
  bool operator==(const Date&);

  //getters
  int getMonth() const;
  int getDay() const;
  int getYear() const;

  //setters
  void setMonth(int);
  void setDay(int);
  void setYear(int);

};


